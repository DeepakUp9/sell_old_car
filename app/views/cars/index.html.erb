<%
=begin%>
 <p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Finish</th>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.description %></td>
        <td><%= car.condition %></td>
        <td><%= car.finish %></td>
        <td><%= car.title %></td>
        <td><%= car.price %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %> 
<%
=end%>





<% content_for :header do %>
<section class="navbar is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Browse the latest Car on sellcar
          
          

      </h1>
    </div>
  </div>
</section>
<% end %>

<div class="instrument-index-grid pt4">
  <% @cars.each do |car| %>

    <div class="instrument border-light">
      <div class="instrument-thumb">
      <%= link_to image_tag(car.image_url(:thumb)), car %>
      <% if car.condition? %>
        <div class="condition">
          <span class="tag is-dark"><%= car.condition %></span>
        </div>
      <% end %>
      </div>


    <div class="pa3">

      <h3 class="fw7 f4 title"><%= link_to car.title, car %></h3>

      <p class="has-text-gray fg pt1">Sold by <%= car.user.name %></p>

      <p class="f3 fw6 has-text-right pt2 price"><%= number_to_human(car.price) %></p>

      <% if car_admin(car) %>
         <%= link_to 'Edit', edit_car_path(car), class: "button is-small" %>
         <%= link_to 'Delete', car, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
      <% end %>

    </div>
  </div>
  <% end %>
</div>